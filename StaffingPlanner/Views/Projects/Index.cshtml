@model IEnumerable<StaffingPlanner.Models.OPPORTUNITY_CATALOG>

@{
    ViewBag.Title = "Project List";
}

<h2>Project List</h2>

<a href="/projects/create">
    <button type="button" class="btn btn-info navbar-btn">
        <i class="fa fa-plus-square"></i>
        <span> Create new</span>
    </button>
</a>
<table class="table table-condensed table-hover table-bordered small">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LOCATION)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SPONSOR)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OPPORTUNITY_NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OPPORTUNITY_PRACTICE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OPPORTUNITY_VALUE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OPPORTUNITY_COMMENT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OPPORTUNITY_PRIORITY)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OPPORTUNITY_TYPE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NUMBER_OF_REQUIRED_ROLES)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LAST_EDITED_BY)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LAST_EDITED_DATE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CLIENT_DETAILS.CLIENT_NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OPPORTUNITY_STATUS1.OPPORTUNITY_STATUS_NAME)
        </th>
        <th>Edit</th>
        <th>Info</th>
        <th>Delete</th>
    </tr>

@foreach (var item in Model) {
	if (item.OPPORTUNITY_STATUS == true)
	{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LOCATION)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SPONSOR)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OPPORTUNITY_NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OPPORTUNITY_PRACTICE)
        </td>
        <!-- alter the value to be million or thousand-->
        @{ if (item.OPPORTUNITY_VALUE >= 1000000)
            {
                var value = item.OPPORTUNITY_VALUE / 1000000;
                <td>$@value M</td>
            }
            else
            {
                var value = item.OPPORTUNITY_VALUE / 1000;
                <td>$@value K</td>
            }
        }
        <td>
            @Html.DisplayFor(modelItem => item.OPPORTUNITY_COMMENT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OPPORTUNITY_PRIORITY)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OPPORTUNITY_TYPE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NUMBER_OF_REQUIRED_ROLES)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LAST_EDITED_BY)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LAST_EDITED_DATE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CLIENT_DETAILS.CLIENT_NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OPPORTUNITY_STATUS1.OPPORTUNITY_STATUS_NAME)
        </td>
        <td>
            <a href="/projects/edit/@item.OPPORTUNITY_ID">
                <button type="button" class="btn btn-primary">
                    <i class="fa fa-edit fa-xs"></i>
                </button>
            </a>
        </td>
        <td>
            <a href="/projects/details/@item.OPPORTUNITY_ID">
                <button type="button" class="btn btn-success">
                    <i class="fa fa-plus fa-xs"></i>
                </button>
            </a>
        </td>
        <td>
            <a href="/projects/makeinactive/@item.OPPORTUNITY_ID">
                <button type="button" class="btn btn-danger">
                    <i class="fa fa-trash fa-xs"></i>
                </button>
            </a>
        </td>
    </tr>
	}
}

</table>
